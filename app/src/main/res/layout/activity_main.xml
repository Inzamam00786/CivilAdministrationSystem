<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context="com.inzamam.civiladministrationsystem.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/regtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#800080"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Verify YourSelf!!"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="25dp" />

    <com.santalu.maskedittext.MaskEditText
        android:id="@+id/cnicMaskedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:hint="Enter Your CNIC"
        android:inputType="number"
        android:layout_margin="20dp"
        app:met_mask="#####-#######-#" />

    <Button
        android:id="@+id/verfiybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cnicMaskedText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Verify"
        android:textColor="#000"
        android:textAllCaps="false"
        android:textSize="22dp" />

</RelativeLayout>
